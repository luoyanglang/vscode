{
	"name": "ai-assistant",
	"displayName": "AI 代码助手",
	"description": "集成 DeepSeek、OpenAI Codex 等多个 AI 模型的智能代码助手",
	"version": "1.0.0",
	"publisher": "vscode",
	"engines": {
		"vscode": "^1.107.0"
	},
	"categories": [
		"AI",
		"Programming Languages"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "AI 代码助手",
			"properties": {
				"aiAssistant.provider": {
					"type": "string",
					"default": "deepseek",
					"enum": [
						"deepseek",
						"openai"
					],
					"enumDescriptions": [
						"DeepSeek AI - 国产优秀 AI 模型",
						"OpenAI - GPT 系列模型"
					],
					"description": "选择 AI 服务提供商",
					"order": 0
				},
				"aiAssistant.deepseek.apiKey": {
					"type": "string",
					"default": "",
					"description": "DeepSeek API Key (从 https://platform.deepseek.com/ 获取)",
					"order": 1
				},
				"aiAssistant.deepseek.model": {
					"type": "string",
					"default": "deepseek-chat",
					"enum": [
						"deepseek-chat",
						"deepseek-coder"
					],
					"enumDescriptions": [
						"通用对话模型",
						"专业代码模型"
					],
					"description": "DeepSeek 模型选择",
					"order": 2
				},
				"aiAssistant.openai.apiKey": {
					"type": "string",
					"default": "",
					"description": "OpenAI API Key (从 https://platform.openai.com/ 获取)",
					"order": 3
				},
				"aiAssistant.openai.model": {
					"type": "string",
					"default": "gpt-4",
					"enum": [
						"gpt-4",
						"gpt-4-turbo",
						"gpt-3.5-turbo"
					],
					"enumDescriptions": [
						"GPT-4 - 最强大的模型",
						"GPT-4 Turbo - 更快更便宜",
						"GPT-3.5 Turbo - 快速且经济"
					],
					"description": "OpenAI 模型选择",
					"order": 4
				},
				"aiAssistant.openai.apiEndpoint": {
					"type": "string",
					"default": "https://api.openai.com/v1",
					"description": "OpenAI API 端点 (可使用代理或第三方端点)",
					"order": 5
				},
				"aiAssistant.language": {
					"type": "string",
					"default": "zh-CN",
					"enum": [
						"zh-CN",
						"en-US"
					],
					"enumDescriptions": [
						"简体中文",
						"English"
					],
					"description": "AI 回复语言",
					"order": 6
				},
				"aiAssistant.autoSave": {
					"type": "boolean",
					"default": true,
					"description": "自动保存对话历史",
					"order": 7
				}
			}
		},
		"commands": [
			{
				"command": "aiAssistant.chat",
				"title": "开始对话",
				"category": "AI 助手",
				"icon": "$(comment-discussion)"
			},
			{
				"command": "aiAssistant.explainCode",
				"title": "解释代码",
				"category": "AI 助手",
				"icon": "$(book)"
			},
			{
				"command": "aiAssistant.generateCode",
				"title": "生成代码",
				"category": "AI 助手",
				"icon": "$(sparkle)"
			},
			{
				"command": "aiAssistant.optimizeCode",
				"title": "优化代码",
				"category": "AI 助手",
				"icon": "$(rocket)"
			},
			{
				"command": "aiAssistant.fixCode",
				"title": "修复代码错误",
				"category": "AI 助手",
				"icon": "$(wrench)"
			},
			{
				"command": "aiAssistant.addComments",
				"title": "添加注释",
				"category": "AI 助手",
				"icon": "$(comment)"
			},
			{
				"command": "aiAssistant.generateTests",
				"title": "生成测试代码",
				"category": "AI 助手",
				"icon": "$(beaker)"
			},
			{
				"command": "aiAssistant.translateCode",
				"title": "翻译代码语言",
				"category": "AI 助手",
				"icon": "$(globe)"
			},
			{
				"command": "aiAssistant.refactor",
				"title": "重构代码",
				"category": "AI 助手",
				"icon": "$(symbol-method)"
			},
			{
				"command": "aiAssistant.generateDoc",
				"title": "生成文档",
				"category": "AI 助手",
				"icon": "$(file-text)"
			},
			{
				"command": "aiAssistant.clearHistory",
				"title": "清除对话历史",
				"category": "AI 助手",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"editor/context": [
				{
					"submenu": "aiAssistant.submenu",
					"group": "1_modification@1"
				}
			],
			"aiAssistant.submenu": [
				{
					"command": "aiAssistant.explainCode",
					"when": "editorHasSelection",
					"group": "1_read@1"
				},
				{
					"command": "aiAssistant.addComments",
					"when": "editorHasSelection",
					"group": "1_read@2"
				},
				{
					"command": "aiAssistant.generateDoc",
					"when": "editorHasSelection",
					"group": "1_read@3"
				},
				{
					"command": "aiAssistant.optimizeCode",
					"when": "editorHasSelection",
					"group": "2_modify@1"
				},
				{
					"command": "aiAssistant.refactor",
					"when": "editorHasSelection",
					"group": "2_modify@2"
				},
				{
					"command": "aiAssistant.fixCode",
					"when": "editorHasSelection",
					"group": "2_modify@3"
				},
				{
					"command": "aiAssistant.generateTests",
					"when": "editorHasSelection",
					"group": "3_generate@1"
				},
				{
					"command": "aiAssistant.translateCode",
					"when": "editorHasSelection",
					"group": "3_generate@2"
				}
			]
		},
		"submenus": [
			{
				"id": "aiAssistant.submenu",
				"label": "AI 助手"
			}
		],
		"keybindings": [
			{
				"command": "aiAssistant.chat",
				"key": "ctrl+shift+a",
				"mac": "cmd+shift+a"
			},
			{
				"command": "aiAssistant.explainCode",
				"key": "ctrl+shift+e",
				"mac": "cmd+shift+e",
				"when": "editorHasSelection"
			},
			{
				"command": "aiAssistant.generateCode",
				"key": "ctrl+shift+g",
				"mac": "cmd+shift+g"
			}
		]
	}
}
